<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dinghy.ntp.plist</string>

    <key>ProgramArguments</key>
    <array>
      <string>/usr/bin/env</string>
      <string>vagrant</string>
      <string>ssh</string>
      <string>--</string>
      <string>sudo</string>
      <string>ntpclient</string>
      <string>-s</string>
      <string>-h</string>
      <string>pool.ntp.org</string>
    </array>

    <key>StartCalendarInterval</key>
    <array>
      <dict>
        <key>Minute</key>
        <integer>0</integer>
      </dict>
      <dict>
        <key>Minute</key>
        <integer>30</integer>
      </dict>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>WorkingDirectory</key>
    <string>%VAGRANT%</string>
  </dict>
</plist>

